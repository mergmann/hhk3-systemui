root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = tab
indent_size = 2
tab_width = 2

# C / C++
[*.{c,cpp,h,hpp,S}]
indent_style = tab
indent_size = 2
tab_width = 2

# Makefiles MUST use tabs
[Makefile]
indent_style = tab
indent_size = 2
tab_width = 2

# Optional: YAML / JSON often prefer spaces
[*.{yml,yaml,json}]
indent_style = space
indent_size = 2
